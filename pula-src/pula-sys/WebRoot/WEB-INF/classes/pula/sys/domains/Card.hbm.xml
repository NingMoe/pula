<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- pula.sys.domains.Card root -->
	<class name="pula.sys.domains.Card" table="card">
		<id name="id" type="long" column="id">
			<generator class="native"/>
		</id>
		<property name="no" column="no" type="string" length="20"/>
		<property name="enabled" column="enabled" type="boolean"/>
		<property name="removed" column="removed" type="boolean"/>
		<property name="mac" column="mac" type="string" length="20"/>
		<property name="createdTime"/>
		<property name="status"/>
		<property name="comments" length="200"/>
		<property name="refId" length="14"/>
	</class>
</hibernate-mapping>
